//Для n вводимых элементов определить количество элементов, значения которых больше предшествующих элементов.
using System;
class HelloWorld {
static void Main() {
int n=Convert.ToInt32(Console.ReadLine());
int max=Convert.ToInt32(Console.ReadLine());
int o=0;
for (int i=1; i<n; i++)
    {
        
      int b=Convert.ToInt32(Console.ReadLine());
      
      
      if (b>max)
      
      {
          max=b;
          o++;
      }
      
    }
    Console.WriteLine(o);
}
}
